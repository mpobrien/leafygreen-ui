{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "allowJs": false,
    "noEmit": true,
    "pretty": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": false, // Turn on when all files have been typed
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
  },
  "include": [
    "./packages/**/*"
  ]
}